@model IEnumerable<FL.Infrastructure.Models.Response.LapViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Laps</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sector1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sector2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sector3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LapTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DriverName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sector1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sector3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LapTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DriverName)
                </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
